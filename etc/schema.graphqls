type Mutation {
    mpCallForPriceRequest (
        input: MpCfpRequestsInput! @doc(description: "Data input")
    ): MpCfpRequestsOutput @resolver(class: "Mageplaza\\CallForPriceGraphQl\\Model\\Resolver\\CreateRequest") @doc(description: "Request the price by guest")
    mpCallForPriceCustomerRequest (
        input: MpCfpRequestsInput @doc(description: "Data input")
    ): MpCfpRequestsOutput @resolver(class: "Mageplaza\\CallForPriceGraphQl\\Model\\Resolver\\CreateCustomerRequest") @doc(description: "Request the price by customer")
}

interface ProductInterface {
    mp_callforprice_rule: MpCfpRuleOutput @doc(description: "Mageplaza Call For Price Rule applied on the product") @resolver(class: "Mageplaza\\CallForPriceGraphQl\\Model\\Resolver\\RuleDataProvider")
}

type Query {
    mpCallForPriceConfig(
        storeId: String @doc(description: "Get Config by Store")
    ): ConfigOutput @resolver(class: "\\Mageplaza\\CallForPriceGraphQl\\Model\\Resolver\\Config") @doc(description: "Query to get config of Call For Price.")
}

type MpCfpRequestsOutput {
  request_id: Int @doc(description: "Request ID")
  created_at: String @doc(description: "Created At")
  sku: String @doc(description: "Sku")
  product_id: Int @doc(description: "Product ID")
  item_product: String @doc(description: "Item Product")
  store_ids: String @doc(description: "Store Ids")
  customer_group_ids: String @doc(description: "Customer Group IDs")
  status: String @doc(description: "Status")
  name: String @doc(description: "Name")
  email: String @doc(description: "Email")
  phone: String @doc(description: "Phone")
  customer_note: String @doc(description: "Customer Note")
  internal_note: String @doc(description: "Internal Note")
  rank_request: Int @doc(description: "Rank Request")
}

input MpCfpRequestsInput {
    product_id: Int @doc(description: "Product ID")
    store_ids: String @doc(description: "Store IDs")
    name: String @doc(description: "Name")
    email: String @doc(description: "Email")
    phone: String @doc(description: "Phone")
    customer_note: String @doc(description: "Customer Note")
}

type ConfigOutput {
    terms_conditions: TermsConditionsOutput @doc(description: "Terms and Conditions")
    disable_default_function: DisableDefaultFunctionOutput @doc(description: "Disable Default Function")
}

type TermsConditionsOutput {
    checked_by_default: Boolean @doc(description: "Checked By Default")
    terms_required: Boolean @doc(description: "Terms Required")
    title: String @doc(description: "Title")
    anchor: String @doc(description: "Anchor")
    url: String @doc(description: "URL")
}

type DisableDefaultFunctionOutput {
    disable_compare_wishlist: Boolean @doc(description: "Disable Compare Wishlist")
    disable_register_customer: Boolean @doc(description: "Disable Register Customer")
    disable_cart_by_group: String @doc(description: "Disable Cart By Group")
    disable_checkout_by_group: String @doc(description: "Disable Checkout By Group")
}

type MpCfpRuleOutput {
    rule_id: Int @doc(description: "Rule ID")
    name: String @doc(description: "Name")
    rule_content: String @doc(description: "Rule Content")
    store_ids: String @doc(description: "Store IDs")
    customer_group_ids: String @doc(description: "Customer Group Ids")
    action: String @doc(description: "Action")
    url_redirect: String @doc(description: "Url Redirect")
    quote_heading: String @doc(description: "Quote Heading")
    quote_description: String @doc(description: "Quote Description")
    status: Boolean @doc(description: "Status")
    show_fields: String @doc(description: "Show Fields")
    required_fields: String @doc(description: "Required Fields")
    conditions_serialized: String @doc(description: "Conditions Serialized")
    attribute_code: String @doc(description: "Attribute Code")
    button_label: String @doc(description: "Button Label")
    priority: Int @doc(description: "Priority")
    to_date: String @doc(description: "To Date")
    created_at: String @doc(description: "Created At")
    rule_description: String @doc(description: "Rule Description")
    enable_terms: Boolean @doc(description: "Enable Terms")
    url_terms: String @doc(description: "Url Terms")
    from_date: String @doc(description: "From Date")
}
